{
    "html": {
        "snippets": {
            "input": "div[class=${1:formName} class=${2:inputName}]>label[for=${2:inputName}]+input[type=${3:inputType} id=${2:inputName} name=${2:inputName}]",
            "meta:vp": "meta[name=viewport content='width=device-width, initial-scale=1.0']",
            "css": "link[href='base.css' type='text/css' rel='stylesheet']",
            "header": "header>a[href=/]>h3>{Austin's<br>RaspbianServer}",
            "!!": "!!!+html[lang=${lang}]>(head>meta[charset=${charset}]+meta:vp+css+title{${1:Document}})+header+body",
            "!": "{<%- contentFor('title') %> ${1:Title} <%- contentFor('body') %>\n}"
        }
    }
}